mixin mobile-menu-li(link,text,icon)
  li(class='mobile-menu__list-item')
    a(href=link class='mobile-menu__list-link js-menu-link')&attributes(attributes)
      span.mobile-menu__list-text=text
.mobile-menu#menu
  nav.mobile-menu
    ul.mobile-menu__list
      +mobile-menu-li('#tasks', 'Задачи','')(class='')
      +mobile-menu-li('#where-do-we-start', 'С чего начинаем','')(class='')
      +mobile-menu-li('#programs', 'Типы программ','')(class='')
      +mobile-menu-li('#result', 'Результат','')(class='')
      +mobile-menu-li('#uniqueness', 'Уникальность','')(class='')
      +mobile-menu-li('#about', 'О нас','')(class='')
